yum install openssl-devel -y
yum install zlib-devel -y
yum -y install wget
wget https://www.python.org/ftp/python/3.8.4/Python-3.8.4.tar.xz
tar -xvJf Python-3.8.4.tar.xz

mkdir /usr/local/python3
cd Python-3.8.4
 可能没有用yum -y install gcc automake autoconf libtool make
 可能没有用yum install gcc gcc-c++

./configure --prefix=/usr/local/bin/python3
./configure --enable-optimizations
 make && make install
ln -s /usr/local/bin/python3/bin/python3 /usr/bin/python3
ln -s /usr/local/bin/python3/bin/pip3 /usr/bin/pip # 这里我写的pip 可以用pip3

清空下载
cd ..
rm -rf  Python-3.8.4
rm Python-3.8.4.tar.xz 
